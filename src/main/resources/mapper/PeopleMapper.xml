<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.testgradution.testgradution.mapper.PeopleMapper">
    <resultMap id="BaseResultMap" type="com.testgradution.testgradution.domain.People" >
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="password"  jdbcType="VARCHAR" property="password"/>
        <result column="sex" jdbcType="BOOLEAN" property="sex"/>
        <result column="location" jdbcType="VARCHAR" property="location"/>
        <result column="advice" jdbcType="VARCHAR" property="advice"/>
        <result column="phone" jdbcType="VARCHAR" property="phone"/>
        <result column="risk" jdbcType="VARCHAR" property="risk"/>
        <result column="pic" jdbcType="VARCHAR" property="pic"/>
        <result column="source" jdbcType="VARCHAR" property="source"/>
        <result column="card_no" jdbcType="VARCHAR" property="cardNo"/>
        <result column="user_name" jdbcType="VARCHAR" property="userName"/>
    </resultMap>

    <sql id="base_column">
        id,name,sex,location,advice,phone,risk,pic,password,source,card_no,user_name
    </sql>


    <insert id="addPeople" parameterType="com.testgradution.testgradution.domain.People">
        insert  into gradutation.people(password,sex,location,advice,phone,risk,pic,name,source,card_no,user_name)
        values
        (#{password},#{sex},#{location},#{advice},#{phone},#{risk},#{pic},#{name},#{source},#{cardNo},#{userName})
    </insert>

    <select id="selectByPrimaryKey" resultMap="BaseResultMap">
        select <include refid="base_column"/>
        from people where id=#{id}
    </select>


    <select id="selectByName" resultMap="BaseResultMap">
        select <include refid="base_column"/> from people where  name like concat('%',#{name},'%')
    </select>

    <update id="deletePeople">
        delete from people where id=#{id}
    </update>

    <update id="updatePeople" parameterType="com.testgradution.testgradution.domain.People">
        update people
        <set>
            name=#{name},
            password=#{password},
            sex=#{sex},
            location=#{location},
            advice=#{advice},
            risk=#{risk},
            phone=#{phone},
            pic=#{pic},
            source=#{source},
            card_no=#{cardNo},
            user_name=#{userName}
        </set>
        where id=#{id}
    </update>

    <select id="selectAll" resultMap="BaseResultMap">
        select <include refid="base_column"/>
        from people
    </select>

    <update id="deleteAll">
        delete from people where id  in 
        <foreach collection="list" item="item" open="(" separator="," close=")"  >
            #{item}
        </foreach>
    </update>

    <select id="selectName" resultType="java.lang.String">
        select  user_name from  gradutation.people where user_name=#{name}
    </select>

    <select id="passIstrue" resultType="java.lang.Integer">
        select count(*) from gradutation.people where user_name=#{username} AND password=#{password}
    </select>

    <update id="changePassword" >
        update  gradutation.people set password=#{newPassword}
    </update>
    <select id="selectPassword" resultType="java.lang.String">
        select password from gradutation.people where user_name=#{name}
    </select>

    <update id="updatePic">
        update  people set pic=#{path} where id=#{id}
    </update>

    <select id="selectPeoples">
        select <include refid="base_column"/> from gradutation.people where id in
        <foreach collection="list"  item="item" open="(" separator="," close=")"  >
            #{item}
        </foreach>
    </select>

    <insert id="registerPeople" parameterType="com.testgradution.testgradution.domain.People">
        insert  into gradutation.people(password,sex,location,advice,phone,risk,pic,name,source,card_no,user_name)
        values
        (#{password},#{sex},#{location},#{advice},#{phone},#{risk},#{pic},#{name},#{source},#{cardNo},#{userName})
    </insert>

    <select id="selectByUserName" resultType="com.testgradution.testgradution.domain.People">
        select  <include refid="base_column"/> from people where user_name=#{userName}
    </select>

    <select id="selectDiease" resultType="com.testgradution.testgradution.domain.People">
        select select people_id FROM doctor_people where doctor_id=#{id})
    </select>
</mapper>