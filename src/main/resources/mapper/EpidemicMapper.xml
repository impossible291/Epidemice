<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.testgradution.testgradution.mapper.EpidemicMapper">
    <resultMap id="BaseResultMap" type="com.testgradution.testgradution.domain.Epidemic" >
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="people_id" jdbcType="INTEGER" property="peopleId"/>
        <result column="is_difficulty_breathing"  jdbcType="VARCHAR" property="isDifficultyBreath"/>
        <result column="is_weak"  jdbcType="VARCHAR" property="isWeak"/>
        <result column="is_cough"  jdbcType="VARCHAR" property="isCough"/>
        <result column="temperature"  jdbcType="DOUBLE" property="temperature"/>
        <result column="location"  jdbcType="VARCHAR" property="location"/>
    </resultMap>

    <sql id="basecolumn">
        id,people_id,is_difficulty_breathing,is_weak,is_cough,temperature,location
    </sql>

    <insert id="insertEpidemic">
        insert into epidemic(people_id,is_difficulty_breathing,is_weak,is_cough,temperature,location)
        values(#{peopleId},#{isDifficultyBreath},#{isWeak},#{isCough},#{temperature},#{location})
    </insert>
    <select id="selectAll" resultMap="BaseResultMap">
        select  <include refid="basecolumn"/>
        from epidemic where people_id=#{peopleId}
    </select>




</mapper>